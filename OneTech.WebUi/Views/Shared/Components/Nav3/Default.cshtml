@model List<MainCategory>
<div class="nav-3 sticky-top">
    <div class="container">
        <div class="row">
            <div class="nav3_main_categories col-7 col-md-4">
                <div class="col-11 col-sm-10 ml-auto row">
                    <div class="cat_menu">
                        <span></span>
                        <span style="margin-top: 7px;">
                        </span>
                        <span style="margin-top: 13px;"></span>
                    </div>
                    <div>
                       ALL CATEGORIES
                    </div>
                </div>
                <ul class="category_dropdown">
                    @if (Model != null)
                    {
                        foreach (MainCategory mainCategory in Model)
                        {
                            if (mainCategory.Categories.Count( ) > 0)
                            {
                                <li class="has_sub">
                                    <a href="@Url.Action("Index","Shop",new { categoryId = "m"+mainCategory.Id})">
                                        @mainCategory.Name
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                    <ul>
                                        @foreach (Category category in mainCategory.Categories)
                                        {
                                            if (category.SubCategories.Count( ) > 0)
                                            {
                                                <li class="has_sub">
                                                    <a href="@Url.Action("Index","Shop",new { categoryId = "c"+category.Id})">
                                                        @category.Name
                                                        <i class="fas fa-chevron-right"></i>
                                                    </a>
                                                    <ul>
                                                        @foreach (SubCategory subCategory in category.SubCategories)
                                                        {
                                                            <li>
                                                                <a href="@Url.Action("Index","Shop",new { categoryId = "s"+subCategory.SubCategoryId})">@subCategory.Name</a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <a href="@Url.Action("Index","Shop",new { categoryId = "c"+category.Id})">@category.Name</a>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="@Url.Action("Index","Shop",new { categoryId = "m"+mainCategory.Id})">
                                       @mainCategory.Name
                                    </a>
                                </li>
                            }
                        }
                    }

                </ul>
            </div>


            <div class="page_navbar ml-auto">
                <ul class="page_navbar_container row ">
                    @*<li>
                        <a href="blog.html">Blog</a>
                    </li>*@
                    <li style="margin-right: 0!important; ">
                        <a href="@Url.Action("Index","Contact")">Contact</a>
                    </li>
                </ul>

            </div>
            <div class="md_menu  ml-auto">
                <div id="accordion_md_menu_header" class="menu_container col-12 row">
                    <div> MENU</div>
                    <div id="accordion_symbol" class="cat_menu">
                        <span></span>
                        <span style="margin-top: 7px;">
                        </span>
                        <span style="margin-top: 13px;"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
