@model IEnumerable<User>

<div class="container">
    <div class="page-content">
        <div class="page-title">
            <div class="row">
                <div class="col-md-6">
                    <a href="#">E-Commerce</a>
                    <span>Options</span>
                </div>
                <div class="col-md-6 d-md-flex d-none align-items-center justify-content-end">
                    <a class="btn btn-sm btn-primary-soft br-3 p-x-15 mr-2" href="@Url.Action("Create","Role")">Add</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card company">
                    <div class="card-body table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">UserName</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">EmailConfirmed</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count( ) > 0)
                                {
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                @user.FirstName
                                            </td>
                                            <td>
                                                @user.LastName
                                            </td>
                                            <td>
                                                @user.UserName
                                            </td>
                                            <td>
                                                @user.Email
                                            </td>
                                            <td>
                                                @user.EmailConfirmed
                                            </td>
                                            <td>
                                                <div class="btn-group dropleft">
                                                    <i class="icon-options-vertical btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="sr-only">Toggle Dropdown</span>
                                                    </i>
                                                    <div class="dropdown-menu">
                                                        <a class="dropdown-item" href="@Url.Action("Edit","User",new { userId = user.Id})">Edit</a>
                                                        <a onclick="return confirm('Are you sure to delete?')" class="dropdown-item" href="@Url.Action("Delete","User", new { userId = user.Id})">Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
