@model ProductForDiscount
<div class="container">
    <div class="page-content">
        <div class="page-title">
            <div class="row">
                <div class="col-md-6">
                    <a href="@Url.Action("Index","Product")">Product</a>
                    <span>Add</span>
                </div>
                <div class="col-md-6 d-md-flex d-none align-items-center justify-content-end">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body txt-14 pdn-sm-40">
                        <form id="addProduct" method="post" action="@Url.Action("CreateDiscount","Product")">
                            @Html.ValidationSummary( )
                            <div class="row">
                                <div class="col-md-12">
                                    <input hidden asp-for="ProductId" />
                                    <input hidden asp-for="DiscountType" />
                                    @*Discount*@
                                    @if (Model.DiscountType == 1)
                                    {
                                        <div class="row mb-4">
                                            <label class="col-md-3">Default Selling Price:</label>
                                            <span class="col-md-6" id="defaulSellingPriceForMoney">@Model.SellingPrice</span>
                                        </div>
                                        <div class="row mb-4">
                                            <label asp-for="DiscountWithMoney" class="col-md-3">Add Discount Money</label>
                                            <div class="col-md-9">
                                                <input asp-for="DiscountWithMoney" type="number" step="0.0000001" max="@Model.SellingPrice" class="form-control" id="discountWithMoney">
                                                <span asp-validation-for="DiscountWithMoney" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label class="col-md-3">Discounted Price:</label>
                                            <span id="discountedWithMoney" class="col-md-6">-</span>
                                        </div>
                                    }
                                    else if (Model.DiscountType == 0)
                                    {
                                        <div class="row mb-4">
                                            <label class="col-md-3">Default Selling Price:</label>
                                            <span class="col-md-6" id="defaulSellingPriceForPercent">@Model.SellingPrice</span>
                                        </div>
                                        <div class="row mb-4">
                                            <label asp-for="DiscountWithPercent" class="col-md-3">Add Discount Percent</label>
                                            <div class="col-md-9">
                                                <input asp-for="DiscountWithPercent"
                                                       type="number" max="100" step="0.0000001"
                                                       class="form-control"
                                                       id="discountWithPercent">
                                                <span asp-validation-for="DiscountWithPercent" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="row mb-4">
                                            <label class="col-md-3">Discounted Price:</label>
                                            <span id="discountedWithPercent" class="col-md-6">-</span>
                                        </div>
                                    }

                                    <div class="row mb-4">
                                        <label asp-for="DiscountStarts" class="col-md-3">Discount Starts</label>
                                        <div class="col-md-9">
                                            <input asp-for="DiscountStarts" class="form-control">
                                            <span asp-validation-for="DiscountStarts" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mb-4">
                                        <label asp-for="DiscountEnds" class="col-md-3">Discount Ends</label>
                                        <div class="col-md-9">
                                            <input asp-for="DiscountEnds" class="form-control">
                                            <span asp-validation-for="DiscountEnds" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <button type="submit" name="submit" id="btnSubmit"
                                            class="btn btn-block btn-primary">
                                        Create
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
