@model List<Brand>
<div class="container">
    <div class="page-content">
        <div class="page-title">
            <div class="row">
                <div class="col-md-6">
                    <a href="@Url.Action("Index","Brand")">Brands</a>
                </div>
                <div class="col-md-6 d-md-flex d-none align-items-center justify-content-end">
                    <a href="@Url.Action("Create","Brand")" class="btn btn-sm btn-primary-soft br-3 p-x-15 mr-2">Add</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Logo</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Brand brand in Model)
                                {

                                    <tr>
                                        <td>@brand.Id</td>
                                        <td>
                                            <div class="media">
                                                <img src="~/img/Brands/@brand.ImageUrl" class="mr-3 wth-35" alt="Brand Logo">
                                            </div>
                                        </td>
                                        <td>@brand.BrandName</td>
                                        <td>
                                            <div class="btn-group dropleft">
                                                <i class="icon-options-vertical btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <span class="sr-only">Toggle Dropdown</span>
                                                </i>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="@Url.Action("Edit","Brand",new { brandId = brand.Id})">Edit</a>

                                                    <a onclick="return confirm('Are you sure to delete?')"
                                                       class="dropdown-item"
                                                       href="@Url.Action("Delete","Brand", new { brandId = brand.Id})">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

