@model RoleEdit
<div class="container">
    <div class="page-content">
        <div class="page-title">
            <div class="row">
                <div class="col-md-6">
                    <a href="#">OneTech</a>
                    <span>Roles</span>
                </div>
                
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card company">
                    <div class="card-body table-responsive">
                        <form action="@Url.Action("Edit","Role")" method="post">

                            <input type="hidden" name="RoleId" value="@Model.Role.Id" />
                            <input type="hidden" name="RoleName" value="@Model.Role.Name" />


                            <h5 class="bg-info text-white p-1">Add to @Model.Role.Name</h5>
                            <table class="table table-bordered table-sm">

                                @if (Model.NonMembers.Count( ) == 0)
                                {
                                    <tr>
                                        <td colspan="2">
                                            All users belongs to @Model.Role.Name
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var user in Model.NonMembers)
                                    {
                                        <tr>
                                            <td>
                                                @user.UserName
                                            </td>
                                            <td style="width:35px">
                                                <input type="checkbox" name="IdsToAdd" value="@user.Id" />
                                            </td>
                                        </tr>
                                    }
                                }

                            </table>



                            <h5 class="bg-info text-white p-1">Remove from @Model.Role.Name</h5>
                            <table class="table table-bordered table-sm"> 

                                @if (Model.Members.Count( ) == 0)
                                {
                                    <tr>
                                        <td colspan="2">
                                            There is not any user belongs to @Model.Role.Name
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var user in Model.Members)
                                    {
                                        <tr>
                                            <td>
                                                @user.UserName
                                            </td>
                                            <td style="width:35px">
                                                <input type="checkbox" name="IdsToDelete" value="@user.Id" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>

                            <button type="submit" class="btn btn-primary">Edit Role </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


